<Window x:Class="Phinite.WindowUserHelp"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Icon="Phi.ico" Title="NITE: user-assisted finite-state machine construction"
		Width="600" Height="500" MinWidth="550" MinHeight="300"
		WindowStartupLocation="CenterOwner"
		Closing="WindowUserHelp_Closing">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<StackPanel>
			<Label Content="New regular expression"/>
			<TextBlock Text="{Binding NewExpression}" />
			<Label Content="Labeled expressions"/>
		</StackPanel>
		<DataGrid Grid.Row="1" MinHeight="100"
				ItemsSource="{Binding LabeledExpressionsData}" AutoGenerateColumns="False"
				SelectionChanged="DataGrid_SelectionChanged" SelectedIndex="{Binding SelectedExpression}">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Label" Binding="{Binding Item2}" Width="Auto" />
				<DataGridTextColumn Header="Remark(s)" Binding="{Binding Item3}" Width="Auto" />
				<DataGridTextColumn Header="Similarity" Binding="{Binding Item4}" Width="Auto" />
				<DataGridTextColumn Header="Regular expression" Binding="{Binding Item1}" Width="Auto" />
			</DataGrid.Columns>
		</DataGrid>
		<StatusBar>
			<StackPanel Orientation="Horizontal" Style="{StaticResource DialogButtonContainer}">
				<Button Click="ButtonAbort_Click">
					<StackPanel Orientation="Horizontal">
						<TextBlock Style="{StaticResource ResourceKey=ButtonSpecialTextRed}" Text="&#x2A09;" />
						<TextBlock Text="Abort computation" />
					</StackPanel>
				</Button>
				<Button IsEnabled="{Binding ExpressionIsSelected}" Click="ButtonEquivalent_Click">
					<StackPanel Orientation="Horizontal">
						<TextBlock Style="{StaticResource ResourceKey=ButtonSpecialTextBlue}" Text="&#x2261;" />
						<TextBlock Text="Equivalent" />
					</StackPanel>
				</Button>
				<Button Click="ButtonDifferent_Click">
					<StackPanel Orientation="Horizontal">
						<TextBlock Style="{StaticResource ResourceKey=ButtonSpecialTextBlue}" Text="&#x2262;" />
						<TextBlock Text="Different" />
					</StackPanel>
				</Button>
				<Button Click="ButtonAuto_Click">
					<StackPanel Orientation="Horizontal">
						<TextBlock Style="{StaticResource ResourceKey=ButtonSpecialTextGray}" Text="&#x2048;" />
						<TextBlock Text="No idea" />
					</StackPanel>
				</Button>
				<Button Style="{StaticResource Info}" Click="Info_UserHelp" />
			</StackPanel>
		</StatusBar>
	</Grid>
</Window>
